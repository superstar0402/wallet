{
  "$id": "manifest.schema.json",
  "title": "Manifest schema for Wallet App",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "pattern": "^[a-z]([a-z]|[0-9]|-)*$",
      "errorMessage": {
        "pattern": "${0#} must be a string of 3 to 50 characters"
      }
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "pattern": "^.*$",
      "errorMessage": {
        "pattern": "${0#} must be a string of 1 to 50 characters"
      }
    },
    "url": {
      "type": "string",
      "pattern": "^.*$",
      "errorMessage": {
        "pattern": "${0#} must be an URL"
      }
    },
    "homepageUrl": {
      "type": "string",
      "pattern": "^.*$",
      "errorMessage": {
        "pattern": "${0#} must be an URL"
      }
    },
    "supportUrl": {
      "type": "string",
      "pattern": "^.*$",
      "errorMessage": {
        "pattern": "${0#} must be an URL"
      }
    },
    "icon": {
      "type": "string",
      "pattern": "^.*$",
      "errorMessage": {
        "pattern": "${0#} must be an URL"
      }
    },
    "type": {
      "type": "string",
      "enum": ["dApp", "walletApp", "webBrowserApp"]
    },
    "platform": {
      "enum": ["desktop", "mobile", "all"],
      "errorMessage": {
        "enum": "must be equal to one of the allowed values: desktop, mobile, all"
      }
    },
    "apiVersion": {
      "type": "string"
    },
    "manifestVersion": {
      "const": 2,
      "errorMessage": "The manifest version. Should be 2"
    },
    "categories": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "type": "string",
        "errorMessage": {}
      }
    },
    "currencies": {
      "oneOf": [
        {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "enum": [
              "ethereum",
              "bitcoin",
              "ethereum_goerli",
              "ethereum_ropsten",
              "ethereum_*",
              "polkadot",
              "bsc",
              "algorand",
              "polygon",
              "litecoin",
              "ripple",
              "bitcoin_*",
              "bitcoin_cash",
              "binance_coin",
              "tether",
              "tron",
              "stellar",
              "dogecoin",
              "tezos",
              "elrond"
            ]
          }
        },
        {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "enum": ["*"]
          }
        }
      ],
      "errorMessage": {
        "oneOf": "Must be type of array with a least 1 value or a string equal to \"*\""
      }
    },
    "content": {
      "type": "object",
      "properties": {
        "shortDescription": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["shortDescription", "description"],
      "additionalProperties": {
        "not": true,
        "errorMessage": "extra property are not allowed, please remove the property ${0#}"
      }
    },
    "permissions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "errorMessage": {}
      }
    },
    "domains": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "errorMessage": {}
      }
    },
    "params": {
      "type": "object"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "type": { "const": "dApp" } }
      },
      "then": {
        "properties": {
          "params": {
            "type": "object",
            "properties": {
              "dappUrl": {
                "minLength": 1,
                "maxLength": 50,
                "type": "string"
              },
              "nanoApp": {
                "minLength": 1,
                "maxLength": 50,
                "type": "string"
              },
              "dappName": {
                "minLength": 1,
                "maxLength": 50,
                "type": "string"
              },
              "networks": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "object",
                  "properties": {
                    "currency": {
                      "enum": [
                        "ethereum",
                        "ethereum_goerli",
                        "ethereum_ropsten",
                        "bsc",
                        "polygon"
                      ],
                      "errorMessage": {
                        "enum": "must be equal to one of the allowed values : ethereum, bitcoin, polkadot"
                      }
                    },
                    "chainID": {
                      "type": "number"
                    },
                    "nodeURL": {
                      "type": "string",
                      "pattern": "^.*$",
                      "errorMessage": {
                        "pattern": "${0#} must be an URL"
                      }
                    }
                  },
                  "required": ["currency", "chainID", "nodeURL"],
                  "additionalProperties": {
                    "not": true,
                    "errorMessage": "extra property are not allowed, please remove the property ${0#}"
                  }
                }
              }
            },
            "required": ["dappUrl", "nanoApp", "dappName", "networks"],
            "additionalProperties": {
              "not": true,
              "errorMessage": "extra property are not allowed, please remove the property ${0#}"
            }
          }
        },
        "required": ["params"]
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "webBrowserApp" } }
      },
      "then": {
        "properties": {
          "params": {
            "type": "object",
            "properties": {
              "webUrl": {
                "type": "string"
              },
              "webAppName": {
                "minLength": 1,
                "maxLength": 50,
                "type": "string"
              },
              "currencies": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "enum": [
                    "ethereum",
                    "ethereum_goerli",
                    "ethereum_ropsten",
                    "bsc",
                    "polygon"
                  ],
                  "errorMessage": {}
                }
              }
            },
            "required": ["webAppName", "currencies", "webUrl"],
            "additionalProperties": {
              "not": true,
              "errorMessage": "extra property are not allowed, please remove the property ${0#}"
            }
          }
        },
        "required": ["params"]
      }
    }
  ],
  "required": [
    "id",
    "name",
    "url",
    "type",
    "platform",
    "apiVersion",
    "manifestVersion",
    "categories",
    "currencies",
    "content",
    "permissions"
  ],
  "additionalProperties": {
    "not": true,
    "errorMessage": "extra property are not allowed, please remove the property ${0#}"
  }
}
